# Build configuration - specify which commit/tag to build from main kvxopt repo[1]
export BUILD_COMMIT="dev"  # Can be tag, branch, or commit hash

# Upload control flags[1][2]
export UPLOAD_TO_TEST_PYPI=1    # 1 = upload to test.pypi.org, 0 = skip
export UPLOAD_TO_OFFI_PYPI=0    # 1 = upload to pypi.org, 0 = skip

# Optional: Override repository URL if building from a fork
export BUILD_REPO="https://github.com/sanurielf/kvxopt.git"
